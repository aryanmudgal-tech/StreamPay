{
  "manifest_version": 3,
  "name": "StreamPay",
  "version": "0.1.0",
  "description": "Pay-per-view micro-payments for YouTube and Prime Video",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://www.primevideo.com/*",
    "https://www.amazon.com/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://www.primevideo.com/*",
        "https://www.amazon.com/gp/video/*"
      ],
      "js": ["content/main.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "StreamPay",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
